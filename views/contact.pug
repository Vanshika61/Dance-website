extends base.pug

block scripts
  script(src='/static/index.js')

block style 
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content 
  div.container
    h1 Contact us
    form(action="/contact" method="post" class="myForm") 
      input(type="text" name="name" class="myInput" placeholder="Enter you name")
      input(type="phone" name="phone" class="myInput" placeholder="Enter you phone no.")
      input(type="email" name="email" class="myInput" placeholder="Enter you email")
      input(type="text" name="address" class="myInput" placeholder="Enter you address")
      input(type="text" name="desc" class="myInput" placeholder="Enter you concern")
      button(class="btn")
        | Submit